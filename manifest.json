{
  "manifest_version": 3,
  "name": "Redbubble Auto Uploader",
  "version": "1.0.0",
  "description": "Automate the process of uploading designs to Redbubble with a side panel interface",
  "permissions": ["activeTab", "storage", "sidePanel"],
  "host_permissions": ["https://www.redbubble.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.redbubble.com/*",
        "https://www.redbubble.com/portfolio*",
        "https://www.redbubble.com/portfolio/images/new*"
      ],
      "js": ["content-new.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open Redbubble Auto Uploader"
  }
}
