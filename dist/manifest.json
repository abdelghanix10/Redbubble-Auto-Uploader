{
  "manifest_version": 3,
  "name": "Redbubble Auto Uploader",
  "version": "1.0",
  "description": "Automates uploading designs to Redbubble",
  "permissions": ["storage", "activeTab", "scripting", "tabs", "sidePanel"],
  "host_permissions": ["https://www.redbubble.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.redbubble.com/*"],
      "js": ["openpanel.js"],
      "type": "module"
    }
  ]
}
